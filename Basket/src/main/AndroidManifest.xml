            android:name="com.jpjy.basket.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ChoiceActivity"></activity>
        <activity android:name="SwipeActivity"></activity>
        <activity android:name="InputpasswordActivity"></activity>
        <activity android:name="CardFailActivity"></activity>
        <activity android:name="PasswordFailActivity"></activity>
        <activity android:name="OpenActivity"></activity>
        <activity android:name="BarActivity"></activity>
        <activity android:name="OpActivity"></activity>
